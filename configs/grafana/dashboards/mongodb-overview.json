{
  "title": "MongoDB Overview",
  "uid": "mongodb-overview",
  "tags": [
    "mongodb",
    "database",
    "colima"
  ],
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "title": "MongoDB Status",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "clamp_max(mongodb_instance_uptime_seconds_total > 0, 1)",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "Prometheus"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": {
                  "text": "DOWN",
                  "color": "red"
                },
                "1": {
                  "text": "UP",
                  "color": "green"
                }
              }
            }
          ],
          "thresholds": {
            "steps": [
              {
                "color": "red",
                "value": 0
              },
              {
                "color": "green",
                "value": 1
              }
            ]
          }
        }
      },
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      }
    },
    {
      "title": "Active Connections",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 6,
        "y": 0
      },
      "targets": [
        {
          "expr": "mongodb_connections{state=\"current\"}",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "Prometheus"
          }
        }
      ],
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      }
    },
    {
      "title": "Operations/sec",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "expr": "rate(mongodb_op_counters_total[5m])",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "Prometheus"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops"
        }
      },
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      }
    },
    {
      "title": "Memory Usage",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 18,
        "y": 0
      },
      "targets": [
        {
          "expr": "mongodb_memory{type=\"resident\"}",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "Prometheus"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "mbytes"
        }
      },
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      }
    },
    {
      "title": "Operations Rate",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 4
      },
      "targets": [
        {
          "expr": "rate(mongodb_op_counters_total{type=\"query\"}[5m])",
          "legendFormat": "Query",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "Prometheus"
          }
        },
        {
          "expr": "rate(mongodb_op_counters_total{type=\"insert\"}[5m])",
          "legendFormat": "Insert",
          "refId": "B",
          "datasource": {
            "type": "prometheus",
            "uid": "Prometheus"
          }
        },
        {
          "expr": "rate(mongodb_op_counters_total{type=\"update\"}[5m])",
          "legendFormat": "Update",
          "refId": "C",
          "datasource": {
            "type": "prometheus",
            "uid": "Prometheus"
          }
        },
        {
          "expr": "rate(mongodb_op_counters_total{type=\"delete\"}[5m])",
          "legendFormat": "Delete",
          "refId": "D",
          "datasource": {
            "type": "prometheus",
            "uid": "Prometheus"
          }
        }
      ],
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      }
    },
    {
      "title": "Connections",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 4
      },
      "targets": [
        {
          "expr": "mongodb_connections{state=\"current\"}",
          "legendFormat": "Current",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "Prometheus"
          }
        },
        {
          "expr": "mongodb_connections{state=\"available\"}",
          "legendFormat": "Available",
          "refId": "B",
          "datasource": {
            "type": "prometheus",
            "uid": "Prometheus"
          }
        }
      ],
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      }
    },
    {
      "title": "Document Operations",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 12
      },
      "targets": [
        {
          "expr": "rate(mongodb_mongod_metrics_document_total{state=\"inserted\"}[5m])",
          "legendFormat": "Inserted",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "Prometheus"
          }
        },
        {
          "expr": "rate(mongodb_mongod_metrics_document_total{state=\"updated\"}[5m])",
          "legendFormat": "Updated",
          "refId": "B",
          "datasource": {
            "type": "prometheus",
            "uid": "Prometheus"
          }
        },
        {
          "expr": "rate(mongodb_mongod_metrics_document_total{state=\"deleted\"}[5m])",
          "legendFormat": "Deleted",
          "refId": "C",
          "datasource": {
            "type": "prometheus",
            "uid": "Prometheus"
          }
        }
      ],
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      }
    },
    {
      "title": "Page Faults",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 12
      },
      "targets": [
        {
          "expr": "irate(mongodb_extra_info_page_faults[5m])",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "Prometheus"
          }
        }
      ],
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      }
    }
  ]
}